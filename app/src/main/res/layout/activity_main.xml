<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.taller1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/black">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rl_text"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome!"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:id="@+id/tv_welcome"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I Was born from as,so where you.we both\n have fed as well, and can both Endure the\nwinter's cold as well as he"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:id="@+id/tv_text1"
                    android:layout_below="@+id/tv_welcome"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_text"
                    android:layout_margin="20sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CREATE A STORY"
                        android:padding="18sp"
                        android:id="@+id/tv_button1"
                        android:background="@android:color/holo_orange_dark"
                        android:layout_alignParentLeft="true"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOW IT WORKS"
                        android:padding="18sp"
                        android:layout_marginRight="20sp"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/white"
                        android:textColor="@android:color/darker_gray"
                        />
                </RelativeLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:layout_margin="7dp"
            android:background="@android:color/darker_gray">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:id="@+id/rl_item1">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ic_launcher_background"
                    android:id="@+id/img1"
                    android:layout_marginRight="10dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Climbiing Everest"
                        android:id="@+id/tv_item1Text1"
                        android:layout_toRightOf="@id/img1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="by Grate White"
                        android:layout_toRightOf="@id/img1"
                        android:layout_below="@id/tv_item1Text1"
                        android:textSize="8sp"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@id/img1"
                   android:orientation="horizontal"
                   android:layout_alignParentBottom="true">
                   <ImageView
                       android:layout_width="10dp"
                       android:layout_height="10dp"
                       android:background="@drawable/ic_launcher_background"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="21"
                       android:textSize="8sp"/>
               </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
